<?xml version="1.0" encoding="utf-8"?>
<modification>
    <name>mollie</name>
    <version>1.0</version>
    <author>QualityWorks</author>
    <link>http://www.quality-works.eu</link>
    <code>QWMOLLIE</code>
    <file path="admin/controller/extension/extension/payment.php">
        <operation>
            <search trim="true"><![CDATA[foreach ($extensions as $key => $value) {]]></search>
            <add position="after"><![CDATA[
			if (strstr($value, 'mollie_')) {
				unset($extensions[$key]);
				continue;
			}

            ]]></add>
        </operation>
    </file>
</modification>